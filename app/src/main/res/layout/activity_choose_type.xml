<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.vacationplanner.an.vacationguru.ChooseType"
    android:weightSum="1">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.vacationplanner.an.vacationguru.ChooseType"
    android:weightSum="1">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/restaurant"
        android:gravity="center"
        android:id="@+id/imageView2" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:background="#262626"
        android:id="@+id/textViewc1"
        android:gravity="center"
        android:textColor="#ffffff"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/coffee"
        android:gravity="center"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView3" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:id="@+id/textViewc2"
        android:background="#262626"
        android:gravity="center"
        android:textColor="#ffffff"/>
    <ImageView
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@drawable/park"
    android:gravity="center"
        android:layout_marginTop="10dp"
    android:id="@+id/imageView4" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Park"
        android:background="#262626"
        android:id="@+id/textViewc3"
        android:gravity="center"
        android:textColor="#ffffff"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/store"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/imageView5" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="store"
        android:id="@+id/textViewc4"
        android:background="#262626"
        android:gravity="center"
        android:textColor="#ffffff"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        android:background="@drawable/cinema"
        android:gravity="center"
        android:id="@+id/imageView6" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cinema"
        android:background="#262626"
        android:gravity="center"
        android:id="@+id/textViewc5"
        android:textColor="#ffffff"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        android:background="@drawable/hotel"
        android:gravity="center"
        android:id="@+id/imageView7" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hotel"
        android:background="#262626"
        android:id="@+id/textViewc6"
        android:gravity="center"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Find by keyword"
        android:layout_marginTop="10dp"
        android:background="#262626"
        android:textSize="30dp"
        android:id="@+id/textViewc7"
        android:gravity="center"
        android:textColor="#ffffff"/>


</LinearLayout>
</ScrollView>